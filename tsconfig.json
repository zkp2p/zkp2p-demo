{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"],
      "@zkp2p/brand": ["../packages/brand/src/index.ts"],
      "@zkp2p/brand/logos/*": ["../packages/brand/logos/*"],
      "@zkp2p/brand/icons/*": ["../packages/brand/icons/*"],
      "@zkp2p/brand/videos/*": ["../packages/brand/videos/*"],
      "@zkp2p/brand/fonts/*": ["../packages/brand/fonts/*"],
      "@zkp2p/brand/tiers/*": ["../packages/brand/tiers/*"],
      "@zkp2p/brand/textures/*": ["../packages/brand/src/textures/*"],
      "@zkp2p/brand/*": ["../packages/brand/src/*", "../packages/brand/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
